<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F8FD"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/prime"
        >

        <TextView
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tnr Diary"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            ></TextView>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/diary_female"
        android:layout_weight="1.2"
        >
    </ImageView>


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Create your First Diary Notes on Trusted and Secure Diary app"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:fontFamily="@font/poppinsregular"

        >


    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/write"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        app:cardBackgroundColor="#98CBFF"
        android:layout_marginHorizontal="80dp"
        app:cardCornerRadius="29dp"
        android:layout_marginBottom="40dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            >
            <ImageView
                android:id="@+id/image1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_baseline_book_24"
                android:layout_centerHorizontal="true"
                ></ImageView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image1"
                android:layout_centerHorizontal="true"
                android:text="WRITE"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:fontFamily="@font/poppinsbold"
                android:textStyle="bold"></TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>